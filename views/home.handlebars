<!--Homepage-->
<div class="container">
    <div class="pageTitle">Scraped Articles</div>
    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4><b>{{this.title}}</b></h4>
                </div>
                <div class="panel-body">
                    <p>{{this.summary}}</p>
                    <span>Article link: 
                    <i><a href={{this.link}} target="_blank">{{this.link}}</a></i></span>
                    <br><br>
                    <!-- Button -->
                    <button type="button" class="btn btn-default save" id="saveBtn" data-id={{this._id}}>Save Article</button>
                </div>
            </div>
            {{/each}}
        {{else}}
        <div class="panel panel-default">
            <div class="panel-body" id="centered">
            <h4 align="center">Sorry, it looks like we don't have any scraped articles. Scrape for new articles!</h4>
            <button type="button" class="scrape" id="scrapeBig">Scrape Articles</button>
            </div>
         </div>
        {{/if}}
    </div>
</div>
